{
    "manifest_version": 2,
    "name": "Chrome Extension - Highlighter",
    "version": "0.1.0",
    "description": "Chrome extension code highlighter.",
    "author": "Jakub Pixochi Kozak",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "chrome.index.js"
        ],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "main.css",
        "main.js"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "activeTab"
    ]
}